function Y = SampleObs(X,step,sigma)
    % Length of Z : 2*(N-1)
    % Length of Bh : N-1
    % Length of X : N-1  
    %    X(i) = X(i-1) + Bh(i) with X(0) = 0;


N = length(X)+1;
nobs = N*step+1;
npoints = N/(nobs-1);


Y = zeros(npoints+1,1);
Y(1) = sqrt(sum(sigma(X((i-1)*npoints+1:i*npoints-1)).^2))*randn(1,1);  % accounting for the fact that X(0) = 0 so we only take first npoints-1 elements of X 
for i = 2:nobs-1
    Y(i+1) = sqrt(sum(sigma(X((i-1)*npoints:i*npoints-1)).^2))*randn(1,1);   
end
    